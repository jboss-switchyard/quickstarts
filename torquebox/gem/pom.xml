<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.torquebox</groupId>
        <artifactId>gem-parent</artifactId>
        <version>1.0.0.CR2</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>rubygems</groupId>
    <artifactId>switchyard</artifactId>
    <packaging>java-gem</packaging>
    <version>0.4.0-SNAPSHOT</version>
    <name>Switchyard: Ruby Gem</name>
    <description>Ruby Gem for running on Torquebox</description>

    <properties>
        <version.rails3>3.0.5</version.rails3>
    </properties>

    <prerequisites>
       <maven>3.0</maven>
    </prerequisites>

    <dependencies>
        <dependency>
            <groupId>rubygems</groupId>
            <artifactId>activesupport</artifactId>
            <version>${version.rails3}</version>
            <type>gem</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>rubygems</groupId>
            <artifactId>i18n</artifactId>
            <version>0.5.0</version>
            <type>gem</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>de.saumya.mojo</groupId>
                <artifactId>gem-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-package</id>
                        <configuration>
                            <includeDependencies>true</includeDependencies>
                        </configuration>
                    </execution>
                    <execution>
                        <id>default-install</id>
                        <phase>install</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>torquebox-repository</id>
            <name>Torquebox Maven Repository</name>
            <url>http://repository-torquebox.forge.cloudbees.com/release/</url>
            <layout>default</layout>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </repository>
        <repository>
            <id>jboss-public-repository-group</id>
            <name>JBoss Public Maven Repository Group</name>
            <url>https://repository.jboss.org/nexus/content/groups/public/</url>
            <layout>default</layout>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

</project>
