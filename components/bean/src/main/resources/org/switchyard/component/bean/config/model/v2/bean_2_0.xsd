<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="urn:switchyard-component-bean:config:2.0"
        xmlns:bean="urn:switchyard-component-bean:config:2.0"
        xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
        elementFormDefault="qualified">

    <import namespace="http://docs.oasis-open.org/ns/opencsa/sca/200912"/>

    <element name="implementation.bean" type="bean:BeanImplementationType" substitutionGroup="sca:implementation"/>
    <complexType name="BeanImplementationType">
        <complexContent>
            <extension base="sca:Implementation">
                <attribute name="class" type="string" use="required"/>
            </extension>
        </complexContent>
    </complexType>

</schema>
