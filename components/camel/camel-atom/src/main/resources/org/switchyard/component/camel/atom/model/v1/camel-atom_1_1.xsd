<schema xmlns="http://www.w3.org/2001/XMLSchema"
     targetNamespace="urn:switchyard-component-camel-atom:config:1.1"
     xmlns:tns="urn:switchyard-component-camel-atom:config:1.1"
     xmlns:switchyard="urn:switchyard-config:switchyard:1.1"
     elementFormDefault="qualified">

    <import namespace="urn:switchyard-config:switchyard:1.1"/>
    <include schemaLocation="camel-common_1_1.xsd" />

    <element name="binding.atom" type="tns:CamelAtomBindingType" substitutionGroup="switchyard:binding.switchyard"/>
    <complexType name="CamelAtomBindingType">
        <complexContent>
            <extension base="tns:BaseCamelBinding">
                <sequence>
                    <element name="feedURI" type="anyURI"/>
                    <element name="splitEntries" type="boolean" minOccurs="0" maxOccurs="1"/>
                    <element name="filter" type="boolean" minOccurs="0" maxOccurs="1"/>
                    <element name="lastUpdate" type="dateTime" minOccurs="0" maxOccurs="1"/>
                    <element name="throttleEntries" type="boolean" minOccurs="0" maxOccurs="1"/>
                    <element name="feedHeader" type="boolean" minOccurs="0" maxOccurs="1"/>
                    <element name="sortEntries" type="boolean" minOccurs="0" maxOccurs="1"/>
                    <element name="consume" type="tns:AtomScheduledPollConsumerType" minOccurs="0" maxOccurs="1"/>
                </sequence>
            </extension>
        </complexContent>
    </complexType>

    <complexType name="AtomScheduledPollConsumerType">
        <sequence>
            <group ref="tns:ScheduledPollConsumerType" minOccurs="0" maxOccurs="1"/>
        </sequence>
    </complexType>

</schema>
