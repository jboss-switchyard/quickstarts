<switchyard xmlns="urn:switchyard-config:switchyard:2.0"
    xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
    xmlns:quartz="urn:switchyard-component-camel-quartz:config:2.0">

    <sca:composite name="camelTest" targetNamespace="urn:camel-core:test:1.1">
        <sca:service name="camelTest" promote="SimpleCamelService">
            <quartz:binding.quartz>
                <quartz:additionalUriParameters>
                    <quartz:parameter name="trigger.timeZone" value="GMT"/>
                </quartz:additionalUriParameters>
                <quartz:name>MyJob</quartz:name>
                <quartz:cron>0 0 12 * * ?</quartz:cron>
                <quartz:stateful>true</quartz:stateful>
                <quartz:trigger.startTime>2011-01-01T12:00:00</quartz:trigger.startTime>
                <quartz:trigger.endTime>2011-01-01T12:00:00</quartz:trigger.endTime>
                <quartz:trigger.timeZone>America/New_York</quartz:trigger.timeZone>
            </quartz:binding.quartz>
        </sca:service>
    </sca:composite>

</switchyard>
