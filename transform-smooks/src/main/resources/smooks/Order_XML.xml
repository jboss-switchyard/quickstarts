<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd"
                      xmlns:core="http://www.milyn.org/xsd/smooks/smooks-core-1.4.xsd"
                      xmlns:jb="http://www.milyn.org/xsd/smooks/javabean-1.4.xsd">

    <core:namespaces>
        <core:namespace prefix="orders" uri="urn:switchyard-quickstart:transform-smooks:1.0"/>
    </core:namespaces>

    <jb:bean beanId="order" class="org.switchyard.quickstarts.transform.smooks.Order" createOnElement="/orders:submitOrder">
        <jb:value property="orderId" data="/orders:submitOrder/order/orderId" />
        <jb:value property="itemId" data="/orders:submitOrder/order/itemId" />
        <jb:value property="quantity" data="/orders:submitOrder/order/quantity" />
    </jb:bean>

</smooks-resource-list>
