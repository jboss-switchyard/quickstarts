<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-5p [%c] %m%n" />
        </layout>
    </appender>

    <!--<logger name="org.switchyard">
        <level value="TRACE" />
    </logger>
    -->
    <logger name="org.switchyard.component.soap">
        <level value="TRACE" />
    </logger>
    <logger name="org.jboss.weld.Bootstrap">
        <level value="ERROR" />
    </logger>
    <logger name="org.apache.commons.httpclient.HttpMethodBase">
        <level value="ERROR" />
    </logger>
    <logger name="org.jboss.interceptor.util.InterceptionTypeRegistry">
        <level value="ERROR" />
    </logger>

    <root>
        <level value="WARN" />
        <appender-ref ref="STDOUT" />
    </root>

</log4j:configuration>
