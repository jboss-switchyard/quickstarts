  <repositories>
    <repository>
      <id>jboss-public-repository-group</id>
      <name>JBoss Public Maven Repository Group</name>
      <url>https://repository.jboss.org/nexus/content/groups/public/</url>
      <layout>default</layout>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <version.freemarker>2.3.15</version.freemarker>
    <version.jaxen>1.1.1</version.jaxen>
    <version.milyn>1.5-SNAPSHOT</version.milyn>
    <version.mvel>2.1.0.drools2</version.mvel>
    <version.project>${project.version}</version.project>
    <version.xstream>1.2.2</version.xstream>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.switchyard</groupId>
      <artifactId>switchyard-build</artifactId>
    </dependency>
  </dependencies>

