<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.switchyard.quickstarts</groupId>
        <artifactId>switchyard-quickstart-parent</artifactId>
        <version>0.6.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>switchyard-quickstart-rules-interview-agent</artifactId>
    <name>Quickstart : Rules Interview Agent</name>
    <packaging>jar</packaging>
    <properties>
        <switchyard.version>0.6.0-SNAPSHOT</switchyard.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.switchyard</groupId>
            <artifactId>switchyard-api</artifactId>
            <version>${switchyard.version}</version>
        </dependency>
        <dependency>
            <groupId>org.switchyard</groupId>
            <artifactId>switchyard-plugin</artifactId>
            <version>${switchyard.version}</version>
        </dependency>
        <dependency>
            <groupId>org.switchyard</groupId>
            <artifactId>switchyard-test</artifactId>
            <version>${switchyard.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.switchyard.components</groupId>
            <artifactId>switchyard-component-rules</artifactId>
            <version>${switchyard.version}</version>
        </dependency>
    </dependencies>
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>drl2pkg</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>org.switchyard.component.common.rules.util.drools.Packages</mainClass>
                            <arguments>
                                <argument>write</argument>
                                <argument>${basedir}/src/main/resources/org/switchyard/quickstarts/rules/interview/Interview.drl</argument>
                                <argument>${basedir}/target/classes/org/switchyard/quickstarts/rules/interview/Interview.pkg</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>drl2pkg-18</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>org.switchyard.component.common.rules.util.drools.Packages</mainClass>
                            <arguments>
                                <argument>write</argument>
                                <argument>${basedir}/src/main/resources/org/switchyard/quickstarts/rules/interview/Interview-18.drl</argument>
                                <argument>${basedir}/target/classes/org/switchyard/quickstarts/rules/interview/Interview-18.pkg</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>drl2pkg-21</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>org.switchyard.component.common.rules.util.drools.Packages</mainClass>
                            <arguments>
                                <argument>write</argument>
                                <argument>${basedir}/src/main/resources/org/switchyard/quickstarts/rules/interview/Interview-21.drl</argument>
                                <argument>${basedir}/target/classes/org/switchyard/quickstarts/rules/interview/Interview-21.pkg</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.switchyard</groupId>
                <artifactId>switchyard-plugin</artifactId>
                <version>${switchyard.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>configure</goal>
                        </goals>
                        <configuration>
                            <scannerClassNames>
                                <param>org.switchyard.component.rules.config.model.RulesSwitchYardScanner</param>
                            </scannerClassNames>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
