<module xmlns="urn:jboss:module:1.0" name="org.switchyard.component.resteasy">

    <resources>
        <resource-root path="switchyard-component-resteasy-${project.version}.jar"/>
    </resources>

    <dependencies>
        <module name="javax.api"/>
        <module name="javax.annotation.api"/>
        <module name="javax.servlet.api"/>
        <module name="javax.ws.rs.api"/>
        <module name="org.apache.httpcomponents"/>
        <module name="org.jboss.logging"/>
        <module name="org.javassist"/>
        <module name="org.jboss.resteasy.resteasy-atom-provider"/>
        <module name="org.jboss.resteasy.resteasy-jackson-provider"/>
        <module name="org.jboss.resteasy.resteasy-jaxb-provider"/>
        <module name="org.jboss.resteasy.resteasy-jaxrs"/>
        <module name="org.jboss.resteasy.resteasy-jettison-provider"/>
        <module name="org.jboss.resteasy.resteasy-multipart-provider"/>
        <module name="org.jboss.resteasy.resteasy-yaml-provider"/>
        <module name="org.switchyard.api"/>
        <module name="org.switchyard.common"/>
        <module name="org.switchyard.config"/>
        <module name="org.switchyard.component.common"/>
        <module name="org.switchyard.deploy"/>
        <module name="org.switchyard.jaxb-impl"/>
        <module name="org.switchyard.security" export="true"/>
        <!-- Remove these when RESTEaay exports them -->
        <module name="org.codehaus.jackson.jackson-core-asl" export="true"/>
        <module name="org.codehaus.jackson.jackson-jaxrs" export="true"/>
        <module name="org.codehaus.jackson.jackson-mapper-asl" export="true"/>
        <module name="org.codehaus.jackson.jackson-xc" export="true"/>
        <module name="org.codehaus.jettison" export="true"/>
        <module name="org.yaml.snakeyaml" export="true"/>
        <!-- End remove -->
    </dependencies>
</module>
